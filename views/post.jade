html
head 
	script(src='http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js')
	link(rel="stylesheet" href="/views/main.css" type="text/css")
body
		each post in posting
			h3.bingo=post.title
			h5.bingo by #{post.author}
			p.post=post.body
		
			each comment in commenting
				#comment 
					h5 "#{comment.content}"
					h6 replied... #{comment.user} 
			

		form.bingo(method ="post", action ="/comment")
			textarea(name="body", cols="40", rows="5",placeholder="add your comment here...")
			input(type="hidden",name="id",value="#{id}")
			input(type="hidden",name="author", value="#{author}")
			input.bingo(type="submit")
		br


	
a.goback(href='/dashboard') Go back to Dashboard
br
br
a.goback(href='/users/'+author+'/posts') Look at more posts from this user

 

	

